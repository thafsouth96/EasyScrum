<div id="divContent">

{% trans_default_domain 'FOSUserBundle' %}
<div class="panel panel-info" style = "margin-top: 40px">

  <div class="panel-heading">
          <div class="panel-title1">Inscription</div>
  </div>
  <div style="padding-top:30px" class="panel-body" >

  {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
      {{ form_widget(form) }}
      <div style="margin-bottom: 20px; text-align: center">
          <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-bloc"/>
      </div>

      <div class="form-group">
          <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                 Vous avez un compte!
              <a href="{{ path('fos_user_security_login')}}" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                Connectez-vous ici
              </a>
              </div>
            </div>
      </div>
{{ form_end(form) }}
</div>
</div>
